// first letter of header files is capitalized
// .cpp files all lower case

// default group format for all classes:

class className
{
  public:
    // constructors and destructor
    Classname();
    Classname(var, var);
    Classname(const Classname& orig)
    ~Classname();

    // accessors:
    varType get();
    varType get();

    // setters/modifiers:
    void set(varType);
    void set(varType);

    // other functions:
    void otherFunction01();
    void otherFunction02();

  Protected:
    // static Variable:
    // other Variables:
};

// constructors and destructor
Classname::Classname()
{

}
Classname::Classname(varType, varType)
{

}
Classname::Classname(const Classname& orig)
{

}
Classname::~Classname()
{

}

// accessors:
varType Classname::get()
{

}
varType Classname::get()
{

}

// settors/modifiers:
void Classname::set(varType)
{

}
void Classname::set(varType)
{

}

// other functions:
void Classname::otherFunction01()
{

}
void Classname::otherFunction02()
{

}
